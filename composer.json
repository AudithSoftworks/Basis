{
	"name": "audithsoftworks/basis",
	"description": "Audith Basis on Laravel Framework",
	"type": "project",
	"keywords": [
		"framework",
		"laravel",
		"audith",
		"basis",
		"shahriyar imanov",
		"shehi"
	],
	"license": "MIT",
	"authors": [
		{
			"name": "Shahriyar Imanov",
			"email": "shehi@imanov.me",
			"homepage": "http://imanov.me",
			"role": "Developer"
		}
	],
	"require": {
		"laravel/framework": "5.0.*",
		"barryvdh/laravel-ide-helper": "~2.0",
		"predis/predis": "~1.0",
		"audithsoftworks/contracts": "dev-master"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"doctrine/dbal": "~2.3"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}

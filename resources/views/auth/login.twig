{% extends "layout" %}

{% use "layout/head" %}
{% use "layout/body/header" %}
{% use "layout/body/main" %}
{% use "layout/body/footer" %}

{% block document_head_title %}<title>{{ trans('auth.headings.login') }} - Audith Basis</title>{% endblock %}

{% block document_head_javascripts %}
    <script type="text/javascript" src="{{ elixir('javascripts/auth.js') }}" defer="defer"></script>
{% endblock %}

{% block document_head_stylesheets %}
    <link rel="stylesheet" href="{{ elixir('stylesheets/auth.css') }}">
{% endblock %}

{% block document_body_header %}
    <header class="container">
        <h1 class="col-md-12">Audith <em>Basis</em></h1>
    </header>
{% endblock %}

{% block document_body_main %}
    <main>
        <form class="login-form col-md-12" action="{{ action('Users\\AuthController@postLogin', [], false) }}" method="post">
            <input type="hidden" name="_token" value="{{ csrf_token() }}">

            <h3 class="form-title font-green col-md-12">{{ trans('auth.headings.login') }}</h3>
            <fieldset class="form-group col-md-12">
                <label class="control-label visible-ie8 visible-ie9">{{ trans('auth.labels.email') }}</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="email" autocomplete="off" placeholder="{{ trans('auth.labels.email') }}" name="email"/>
            </fieldset>
            <fieldset class="form-group col-md-12">
                <label class="control-label visible-ie8 visible-ie9">{{ trans('auth.labels.password') }}</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="{{ trans('auth.labels.password') }}" name="password"/>
            </fieldset>
            <fieldset class="form-actions col-md-12">
                <button type="submit" class="btn green uppercase">{{ trans('auth.buttons.login') }}</button>
                <label class="rememberme check"><input type="checkbox" name="remember" value="1"> {{ trans('auth.remember_me') }}</label>
                <a href="{{ action('Users\\PasswordController@requestPasswordResetLink', [], false) }}" id="forget-password" class="forget-password">{{ trans('auth.buttons.password') }}</a>
            </fieldset>
            <fieldset class="login-options col-md-12">
                <h4>{{ trans('auth.social_login') }}</h4>
                <ul class="social-icons">
                    <li><a class="social-icon-color fa fa-google-plus" data-original-title="Facebook" href="{{ route('login', 'google', false) }}"></a></li>
                    <li><a class="social-icon-color fa fa-twitter" data-original-title="Twitter" href="{{ route('login', 'twitter', false) }}"></a></li>
                    <li><a class="social-icon-color fa fa-facebook" data-original-title="Google Plus" href="{{ route('login', 'facebook', false) }}"></a></li>
                </ul>
            </fieldset>
            <fieldset class="create-account">
                <a href="{{ route('register', [], false) }}" class="uppercase">{{ trans('auth.buttons.register') }}</a>
            </fieldset>
        </form>
    </main>
{% endblock %}

{% block document_body_footer %}
    <footer>2015 Â© Audith Softworks.</footer>
{% endblock %}

{% extends "layout" %}

{% use "layout/head" %}
{% use "layout/body/header" %}
{% use "layout/body/main" %}
{% use "layout/body/footer" %}

{% block document_head_title %}<title>{{ trans('auth.headings.login') }} - Audith Basis</title>{% endblock %}

{% block document_head_javascripts %}
    <script type="text/javascript" src="{{ elixir('login.js') }}"></script>
{% endblock %}

{% block document_head_stylesheets %}
    <link rel="stylesheet" href="{{ elixir('auth.css') }}">
{% endblock %}

{% block document_body_header %}
    <header class="container">
        <h1 class="col-md-12">Audith <em>Basis</em></h1>
    </header>
{% endblock %}

{% block document_body_main %}
    <main>
        <form class="login-form col-md-12" action="{{ action('Auth\\LoginController@loginViaWeb', [], false) }}" method="post">
            {{ csrf_field() }}

            <h3 class="form-title font-green col-md-12">{{ trans('auth.headings.login') }}</h3>
            <fieldset class="form-group col-md-12">
                <label class="control-label visible-ie8 visible-ie9">{{ trans('auth.labels.email') }}</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="email" autocomplete="off" placeholder="{{ trans('auth.labels.email') }}" name="email"/>
            </fieldset>
            <fieldset class="form-group col-md-12">
                <label class="control-label visible-ie8 visiblauthe-ie9">{{ trans('auth.labels.password') }}</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="{{ trans('auth.labels.password') }}" name="password"/>
            </fieldset>
            <fieldset class="form-actions col-md-12">
                <button type="submit" class="btn green uppercase">{{ trans('auth.buttons.login') }}</button>
                <label class="rememberme check mt-checkbox mt-checkbox-outline">
                    <input type="checkbox" name="remember" value="1"> {{ trans('auth.remember_me') }}
                    <span></span>
                </label>
                <a href="{{ action('Auth\\PasswordController@requestPasswordResetLink', [], false) }}" id="forget-password" class="forget-password">{{ trans('auth.buttons.password') }}</a>
            </fieldset>
            <fieldset class="login-options col-md-12">
                <h4>{{ trans('auth.social_login') }}</h4>
                <ul class="social-icons">
                    <li><a class="social-icon-color fa fa-google-plus" data-original-title="Facebook" href="{{ route('oauth.to', 'google', false) }}"></a></li>
                    <li><a class="social-icon-color fa fa-twitter" data-original-title="Twitter" href="{{ route('oauth.to', 'twitter', false) }}"></a></li>
                    <li><a class="social-icon-color fa fa-facebook" data-original-title="Google Plus" href="{{ route('oauth.to', 'facebook', false) }}"></a></li>
                </ul>
            </fieldset>
            <fieldset class="create-account">
                <a href="{{ action('Auth\\RegisterController@showRegistrationForm', [], false) }}" class="uppercase">{{ trans('auth.buttons.register') }}</a>
            </fieldset>
        </form>
    </main>
{% endblock %}

{% block document_head %}
    {% block document_head_title %}<title>Audith Basis</title>{% endblock %}

    {% block document_head_description %}<meta name="description" content="Audith.Basis">{% endblock %}

    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="author" content="Shahriyar Imanov <shehi@imanov.me>">

    <meta name="google" content="notranslate">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    {# Viewport metatags #}
    <meta name="HandheldFriendly" content="true">
    <meta name="MobileOptimized" content="480">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    {# iOS webapp metatags #}
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    {# iOS webapp icons #}
    {#<link rel="apple-touch-icon-precomposed" href="*.png">#}
    {#<link rel="apple-touch-icon-precomposed" sizes="72x72" href="*.png">#}
    {#<link rel="apple-touch-icon-precomposed" sizes="114x114" href="*.png">#}
    {#<link rel="apple-touch-startup-image" href="*.png">#}

    {#<meta name="msapplication-TileColor" content="#000">#}
    {#<meta name="msapplication-TileImage" content="*.png">#}

    <link rel="shortcut icon" href="/favicon.ico">

    {% block document_head_javascripts %}{% endblock %}
    {% block document_head_stylesheets %}{% endblock %}

    {% if errors.any %}{% set flashMessage, flashType = errors.all, 'error' %}{% endif %}
    {% if session_has('message') %}{% set flashMessage, flashType = session_get('message'), 'success' %}{% endif %}

    {% if flashMessage %}
        <script type="text/javascript">
            appClient.Session.flashMessages({{ flashMessage|json_encode|raw }}, '{{ flashType }}');
        </script>
    {% endif %}
{% endblock %}
